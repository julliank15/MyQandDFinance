<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Title row -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Tax"
        android:textSize="22sp"
        android:textStyle="bold" />
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Row 1 -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >
    </LinearLayout>
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Row 2 -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvSalary"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Salary After Tax: $"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvSalary1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /month"
            android:textStyle="italic"
            android:textSize="15sp" />

    </LinearLayout>

<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Row 3 -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
 
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvSpouseSalary"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Spouse Salary: $"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
    	android:id="@+id/tvSpouseSalary1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /month"
            android:textStyle="italic"
            android:textSize="15sp" />
    
      </LinearLayout>
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
   <!-- Row 4 -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
  
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >
    	
    <TextView
        android:id="@+id/tvCombined"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Combined Salary: $"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvCombined1"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" /month"
            android:textStyle="italic"
            android:textSize="15sp" />
		
    </LinearLayout>
    
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Button Row -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		
   	<Button
       android:id="@+id/btnForecast"
       android:layout_width="120dp"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_gravity="start"
       android:padding="10dp"
       android:layout_margin="10dp"
       android:text="Forecast" />
   	
   	 <TextView
        android:id="@+id/tvBlank"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />
   	
   	<Button
       android:id="@+id/btnAdvisor" 
       android:gravity="center" 
       android:layout_gravity="end" 
       android:layout_width="120dp" 
       android:layout_height="wrap_content" 
       android:padding="10dp" 
       android:layout_margin="10dp"
       android:text="Advisor"/>
   
   </LinearLayout>

</LinearLayout>