<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/greenfinance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Title row -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Tax"
        android:textSize="30sp"
        style="@style/styTextWhite" />
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Row 1 -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >
    </LinearLayout>
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Row 2 -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvSalary"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Salary After Tax: $"
            style="@style/styTextWhite"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvSalary1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/styTextWhite"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /month"
            android:textStyle="italic"
            style="@style/styTextWhite"
            android:textSize="15sp" />

    </LinearLayout>

<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Row 3 -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
 
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvSpouseSalary"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Spouse Salary: $"
        style="@style/styTextWhite"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
    	android:id="@+id/tvSpouseSalary1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	style="@style/styTextWhite"
    	android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /month"
            android:textStyle="italic"
            style="@style/styTextWhite"
            android:textSize="15sp" />
    
      </LinearLayout>
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
   <!-- Row 4 -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
  
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >
    	
    <TextView
        android:id="@+id/tvCombined"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Combined Salary: $"
        style="@style/styTextWhite"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvCombined1"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	style="@style/styTextWhite"
    	android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" /month"
            android:textStyle="italic"
            style="@style/styTextWhite"
            android:textSize="15sp" />
		
    </LinearLayout>
    
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="30dp"
            android:textStyle="italic"
            style="@style/styTextWhite"
            android:textSize="15sp" />
    
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
    <!-- Button Row -->
<!--  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
 -->
   	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >
   	
   		<Button
       		android:id="@+id/btnForecast"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_marginLeft="30dp"
       		android:layout_marginRight="10dp"
       		android:layout_marginTop="100dp"
       		android:layout_gravity="start"
       		android:gravity="center"
       		android:background="@drawable/backdarkgreen"
       		style="@style/styTextWhite"
       		android:text="Forecast" />
   	
   		<Button
       		android:id="@+id/btnAdvisor" 
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_marginLeft="70dp"
       		android:layout_marginRight="30dp"
       		android:layout_marginTop="100dp"
       		android:layout_gravity="end"
       		android:gravity="center"
       		android:background="@drawable/backdarkgreen"
       		style="@style/styTextWhite"
       		android:text="Advisor"/>
   		</LinearLayout>

</LinearLayout>